/* Window and Body Styles */
html {
	background-color: rgb(101, 101, 101);
}

body {
	background-color: white;
	font-family: Verdana, Geneva, Arial, sans-serif;
	margin-top: 20px; 
	margin-left: auto;
	margin-bottom: 20px;
	margin-right: auto;
	width: 95%;
	min-width: 320px;
	max-width: 960px;
	position: relative;
}

img {
	display: block;
	width: 100%;
}

nav a {
	text-decoration: none;
}
	


/* Body Header Styles */
header {
	background-color: rgb(191, 168, 170);
	height: 40px;
}

nav > ul > li {
	float: left;
	margin-right: 20px;
	padding-left: 0px;
	padding-right: 0px;
	padding-top: 10px;
	padding-bottom: 10px;
	display: block;
}

nav a:link {
	color: rgb(51, 51, 51);
	font-size: 0.9em;
}

nav a:visited {
	color: rgb(51, 51, 51);
	font-size: 0.9em;
}

nav a:hover {
	color: rgb(255, 211, 211);
	font-size: 0.9em;
}

nav a:active {
	color: rgb(255, 211, 211);
	font-size: 0.9em;
}

/* DIV Container Styles */
div#container {
	padding-right: 8px;
	padding-bottom: 8px;
}

div.cell a {
	display: block;
	width: 100%;
}
	
div.cell {
	padding-left: 8px;
	padding-top: 8px;
}


/* Footer Styles */
footer {
	position: absolute;
	right: 8px;
	bottom: 8px;
	color: rgb(143, 33, 36);
	text-align: right;
	font-size: 2vmin;
}