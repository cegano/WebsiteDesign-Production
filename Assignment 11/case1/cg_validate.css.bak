/* Validation Styles */

input[type='text']:focus, select:focus, textarea:focus {
	background-color: rgb(245, 245, 140);
}

input[type='text']:valid, select:valid, textarea:valid {
	background-color: rgb(220, 225, 220);
	background-image: url("cg_valid.png")no-repeat 95% 50%;
	background-size: 25px;
}

input[type='text']:invalid, select:invalid, textarea:invalid {
	background-color: rgb(255, 232, 232);
	background-image: url("cg_invalid.png")no-repeat 95% 50%;
	background-size: 25px;
}